@page
@model RentnRoll.Pages.Account.RegisterModel
@{
}
<header class="bg-dark text-white py-3">
    <div class="container text-center">
        <h2>Account</h2>
    </div>
</header>
<body class="bg-light">
    <div class="container mt-5 p-4 border rounded bg-white shadow-sm" style="max-width: 400px;">
        <h3 class="text-center mb-4">Register a new user</h3>

        <form method="post">
            <div class="mb-3">
                <label class="form-label">E-post:</label>
                <input type="email" asp-for="Email" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Password:</label>
                <input type="password" asp-for="Password" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Register</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p class="text-danger text-center mt-3">@Model.ErrorMessage</p>
        }
    </div>
</body>