@page
@model RentnRoll.Pages.Admin.DeleteModel
@{
    ViewData["Title"] = "Delete vehicle";
}

<header class="bg-dark text-white py-3">
    <div class="container text-center">
        <h2>Admin Page</h2>
    </div>
</header>
<body class="bg-light">
    <div class="container mt-4 p-4 border rounded bg-white">
        <h3 class="text-center mb-4">Delete vehicle</h3>
        <form method="post">
            <p class="text-danger fw-bold">Are you sure you want to delete this vehicle?</p>
            <button type="submit" class="btn btn-danger px-4 py-2">Delete Vehicle</button>
            <a href="/Index" class="btn btn-secondary px-4 py-2 ms-2">Cancel</a>
        </form>
    </div>
</body>