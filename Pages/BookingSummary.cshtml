@page
@model RentnRoll.Pages.BookingSummaryModel
@{
}

<header class="bg-dark text-white py-3">
	<div class="container text-center">
		<h2 class="display-4">Booking Summary</h2>
	</div>
</header>

<body>
		@if (Model.booking != null)
	{
		
		<table class="table">
			<thead>
				<tr>
					<th>Brand</th>
					<th>Model</th>
					<th>Type</th>
					<th>Year</th>
					<th>Pickup date</th>
					<th>Return date</th>
					<th>Status</th>
				</tr>
			</thead>

			<tbody>
				<tr>
					<td>@Model.booking.Vehicle.Brand</td>
					<td>@Model.booking.Vehicle.Model</td>
					<td>@Model.booking.Vehicle.Type</td>
					<td>@Model.booking.Vehicle.Year</td>
					<td>@Model.booking.PickupDate</td>
					<td>@Model.booking.ReturnDate</td>
					<td>@Model.booking.Status</td>
				</tr>
			</tbody>
		</table>

		<h4>Total: @Model.booking.TotalCost SEK</h4>
	}
	else
	{
		<p>No vehicles added to your booking yet.</p>
	}
</body>